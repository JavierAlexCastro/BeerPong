<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/menu_screen_bg1"
    >

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/back_button_effect" />

    <TextView
        android:id="@+id/b_curr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current ball"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="30sp"


        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/b_currbg"
        android:src="@drawable/black_box"
        android:layout_alignBottom="@+id/b_curr_item"
        android:layout_alignLeft="@+id/b_curr_item"
        android:layout_alignRight="@+id/b_curr_item"
        android:layout_alignTop="@+id/b_curr_item"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/b_curr_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ping_pong_ball"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b_curr_text"
        android:maxHeight="80dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        />

    <TextView
        android:id="@+id/b_available_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Balls"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="30sp"
        android:layout_below="@+id/b_curr_item"
        android:layout_marginTop="30dp"
        />




    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/b_item1"
        android:background="@drawable/black_box"
        android:layout_alignBottom="@+id/b_image1"
        android:layout_alignLeft="@+id/b_image1"
        android:layout_alignRight="@+id/b_image1"
        android:layout_alignTop="@+id/b_image1"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/b_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/uta_ball2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b_available_text"
        android:layout_toStartOf="@+id/b_item2"
        android:maxHeight="80dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:elevation="10dp"
        android:layout_marginRight="30dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/b_item2"
        android:background="@drawable/black_box"
        android:layout_alignBottom="@+id/b_image2"
        android:layout_alignLeft="@+id/b_image2"
        android:layout_alignRight="@+id/b_image2"
        android:layout_alignTop="@+id/b_image2"
        android:scaleType="fitXY"

        />

    <ImageView
        android:id="@+id/b_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/texas_ball1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/b_available_text"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/b_item1"
        android:maxHeight="80dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:elevation="10dp"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/b_item3"
        android:background="@drawable/black_box"
        android:layout_alignBottom="@+id/b_image3"
        android:layout_alignLeft="@+id/b_image3"
        android:layout_alignRight="@+id/b_image3"
        android:layout_alignTop="@+id/b_image3"
        android:scaleType="fitXY"

        />

    <ImageView
        android:id="@+id/b_image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/khalili_ball2"
        android:layout_toEndOf="@+id/b_item2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/b_available_text"
        android:layout_alignTop="@+id/b_item1"
        android:maxHeight="80dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:elevation="10dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id="@+id/b_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/accept_button_effect"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/b_image2"/>




</RelativeLayout>
